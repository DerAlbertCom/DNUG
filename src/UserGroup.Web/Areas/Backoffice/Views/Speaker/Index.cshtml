@model IEnumerable<EditSpeakerModel>

@{
    ViewBag.Title = "Index";
}

<h3>Sprecher bearbeiten</h3>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn" })
</p>
<table class="table table-striped table-bordered table-condensed">
    <caption>Alle Sprecher</caption>
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Homepage)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.LastName + ", " + item.GivenName, "Details", new {id = item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Homepage)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-mini btn-warning" })
            </td>
        </tr>
    }
</tbody>
</table>