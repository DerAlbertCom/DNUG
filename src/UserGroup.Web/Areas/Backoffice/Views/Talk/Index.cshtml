@model IEnumerable<DisplayTalkLineModel>

@{
    ViewBag.Title = "Index";
}

<h3>Vorträge bearbeiten</h3>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn" })
</p>
<table class="table table-striped table-bordered table-condensed">
    <caption>Alle Vorträge</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>@Html.DisplayNameFor(model => model.MeetingTitle)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(Html.DisplayFor(m => item.Title, 50), "Details", new { id = item.Id })
                </td>
                <td>@Html.DisplayFor(m => item.MeetingTitle, 40)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-mini btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>
