@using Microsoft.Practices.ServiceLocation
@model int
@{
    var repository = ServiceLocator.Current.GetInstance<IRepository<Location>>();

    var query = from l in repository.Entities
                orderby l.Name
                select new {Text = l.Name, Value = l.Id};
    var empty = new {Text = "<auswählen>", Value = 0};
    var items = new[] {empty}.Concat(query.ToList());
    var selectList = new SelectList(items, "Value","Text", Model);
}
@Html.DropDownList("",selectList)